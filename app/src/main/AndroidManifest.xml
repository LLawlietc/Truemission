<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cheng.example.truemission">

    <!-- 连接网络权限，用于执行云端语音能力 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 读取手机信息权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".Resetpwd" />
        <activity android:name="com.users.usersactivity.User" />
        <activity android:name="com.users.usersactivity.Userstable" />
        <activity android:name="com.users.usersactivity.Seequestion" />
        <activity android:name="com.users.usersactivity.Askquestion" />
        <activity android:name="com.users.usersactivity.Pointmanage" />
        <activity android:name="com.users.usersactivity.Collectmanage" />
        <activity android:name="com.users.usersactivity.Attentionmanage" />
        <activity android:name=".Professor_Login" />
        <activity android:name=".Professor_Register" />
        <activity android:name=".Professor_Resetpwd" />
        <activity android:name="com.professor.professorsactivity.Professor" />
        <activity android:name="com.professor.professorsactivity.Professorstable" />
        <activity android:name="com.professor.professorsactivity.Professor_seequestion" />
        <activity android:name="com.professor.professorsactivity.Professor_fansmanage" />
        <activity android:name="com.professor.professorsactivity.Professor_pointmanage" />
        <activity android:name="com.professor.professorsactivity.Professor_giveanswer"></activity>
    </application>

</manifest>